package frame;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class MyFrame extends JFrame {
   private final JTextField textField;
   private char operation;
   private double total;
   private boolean isFirstDigit;

    public MyFrame() {
        setTitle("Calculator");
        setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
        setBounds(300, 300, 170, 300);
        setVisible(true);
        isFirstDigit = true;

        total = 0;

        JPanel jPanel = new JPanel();

         textField = new JTextField(12);
         textField.setEditable(false);

        jPanel.add(textField);

        JButton[] jbs = new JButton[9];
        for (int i = 0; i < jbs.length; i++) {
            jbs[i] = new JButton(String.valueOf(i + 1));
            jbs[i].addActionListener(new ActionListener() {
                @Override
                public void actionPerformed(ActionEvent e) {
                    action(e);
                }
            });
            jPanel.add(jbs[i]);
        }

        JButton buttonZero = new JButton("0");
        JButton buttonPlus = new JButton("+");
        JButton buttonMinus = new JButton("-");
        JButton buttonEquals = new JButton("=");
        JButton buttonDivision = new JButton("/");
        JButton buttonMultiplication = new JButton("*");
        JButton buttonDot = new JButton(".");
        JButton buttonClean = new JButton("C");
        JButton buttonRemove = new JButton("<");
        buttonZero.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                action(e);
            }
        });
        buttonPlus.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                dobleChar(e);
            }
        });
        buttonMinus.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                dobleChar(e);
            }
        });
        buttonEquals.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                calculating(e);
            }
        });
        buttonDivision.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                dobleChar(e);
            }
        });
        buttonMultiplication.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                dobleChar(e);
            }
        });
        buttonDot.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                action(e);
            }
        });
        buttonClean.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                actionClean(e);
            }
        });
        buttonRemove.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                actionRemove(e);
            }
        });


        jPanel.add(buttonZero);
        jPanel.add(buttonPlus);
        jPanel.add(buttonMinus);
        jPanel.add(buttonEquals);
        jPanel.add(buttonDivision);
        jPanel.add(buttonMultiplication);
        jPanel.add(buttonDot);
        jPanel.add(buttonClean);
        jPanel.add(buttonRemove);
        add(jPanel);
    }

    private void calculating(ActionEvent e) {
            String text = textField.getText();
            String digit = "";
            for (int i = 0; i < text.length();i++) {
                char c = text.charAt(i);
                if (c == '-' || c == '+' || c == '/' || c == '*') {
                    double currentValue = Double.parseDouble(digit);
                    if (isFirstDigit) {
                        total += currentValue;
                        isFirstDigit = false;
                    }else  {
                        if (operation == '-') {
                            total -= currentValue;
                        }if (operation == '+') {
                            total += currentValue;
                        }if (operation == '/') {
                            total /= currentValue;
                        }else if (operation == '*') {
                            total *= currentValue;
                        }
                    }


                    digit = "";
                    operation = c;
                    continue;
                }

                digit += c;
            }

            double currentValue = Double.parseDouble(digit);
            if (operation == '-') {
                total-= currentValue;
            } if (operation == '+') {
                total += currentValue;
            } if (operation == '/') {
                total /= currentValue;
            } else if (operation == '*') {
                total *= currentValue;
        }

            isFirstDigit = true;
            textField.setText(String.valueOf(total));
            total = 0;
    }

    public void action(ActionEvent event){
        textField.setText(textField.getText() + event.getActionCommand());
    }
    public  void actionClean(ActionEvent event){
        textField.setText("");
    }
    public void actionRemove(ActionEvent event) {
        String str;
        str = textField.getText();
        if (str.length() != 0) {
            str = str.substring(0, str.length() - 1);
            textField.setText(str);
        }
    }
    public void dobleChar(ActionEvent event){
        if(textField.getText().substring(textField.getText().length()-1).equals(event.getActionCommand())) {
            textField.getText();
        }else textField.setText(textField.getText() + event.getActionCommand());
    }
}